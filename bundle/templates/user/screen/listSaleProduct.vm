<div class="container-fluid">
		<div id="nopermissionModal" class="modal" style="display: none; ">
			<div class="modal-header">
				<a class="close" data-dismiss="modal">×</a>
				<h3>您还没有登录，请您登录后再查看产品的详细信息！</h3>
			</div>
			<div class="modal-footer">
				<a href="#" class="btn btn-success" data-dismiss="modal" onClick="location.reload();">确定</a>
			</div>
		</div>
		<div class="row">
			<form class="well form-search span12" id="searchForm">
				<input type="hidden" name="order" id="orderBy" value="$!order"/>
				<div>
					<label class="label label-warning"  for="name">产品名称</label>
					<input
					type="text" class="input-xlarge" id="name" name="name"  value="$!name">
				</div>
				<label class="label label-warning">资源类别</label>
				<div>
						#foreach($materialCategory in $notMaterialCategories)
							<label class="checkbox inline">
								<input type="checkbox"
								id="$!materialCategory.id" value="$!materialCategory.id" name="notMaterialIds" #if($materialCategory.checked)checked="true"#end>
								$!materialCategory.name
							</label>
						#end
				</div>
				<label class="label label-warning">原材料类别</label>
					<div>
						#foreach($materialCategory in $materialCategories)
							<label class="checkbox inline">
								<input type="checkbox"
								id="$!materialCategory.id" value="$!materialCategory.id" name="materialIds" #if($materialCategory.checked)checked="true"#end>
								$!materialCategory.name
							</label>
						#end
				</div>
				<div class="row-fluid">
					<label class="label label-warning" " for="input01">排序</label>
					<button class="btn btn-mini" onClick="doSearchWithOrder('publish');">
					<i class="icon-arrow-up"></i>
					发布时间
					</button>
					<button class="btn btn-mini" onClick="doSearchWithOrder('price');">
					<i class="icon-arrow-up"></i>
					单价
					</button>
				</div>
				<div>
					<button class="btn btn-warning " onClick="doSearch();">
					查询
					</button>
				</div>
			</form>
		</div>
		<div class="pagination">
			  <ul>
			  	<li#if($!page == 1) class="active"#end><a href="listSaleProduct.htm?name=$!name&order=$!order&page=1&pageSize=20">第1页</a></li>
			 	 #if($!totalPage != 1)
			 	 #foreach($pageIndex in [2 .. $!totalPage])
					<li#if($!page == $!pageIndex) class="active"#end><a href="listSaleProduct.htm?name=$!name&company=$!company&status=$!status&userLevel=$!userLevel&page=$!pageIndex&pageSize=$!pageSize">$!pageIndex</a></li>
			 	 #end
			 	 #end
			  </ul>
		</div>
		<div class="span16">
    		<ul class="thumbnails">
    			#foreach($product in $productList)
    			<li class="span3">
    				<div class="thumbnail">
    					#if($!product.imgs&&$!product.imgs.size>0)
    						<img src="$!product.imgs.get(0).path" alt="">
    					#else
    					<img src="http://placehold.it/260x180" alt="">
    					#end
    						<div class="caption">
    							<h5>$product.name</h5>
    							<p>
    							status=$!product.status 其它产品信息
    							</p>
    							<p>
    							<a href="saleProductDetail.htm?id=$!product.id" class="btn btn-primary">详情</a>
    							</p>
    						</div>
    				</div>
    			</li>
    			#end
    		</ul>
		</div>
		<div class="pagination">
			  <ul>
			  	<li#if($!page == 1) class="active"#end><a href="listSaleProduct.htm?name=$!name&company=$!company&status=$!status&userLevel=$!userLevel&page=1&pageSize=20">第1页</a></li>
			 	 #if($!totalPage != 1)
    			 	 #foreach($pageIndex in [2 .. $!totalPage])
    					<li#if($!page == $!pageIndex) class="active"#end><a href="listSaleProduct.htm?name=$!name&company=$!company&status=$!status&userLevel=$!userLevel&page=$!pageIndex&pageSize=$!pageSize">$!pageIndex</a></li>
    			 	 #end
			 	 #end
			  </ul>
		</div>
		<hr>
	</div>
	<script>
		function doSearchWithOrder(order){
			//alert(order);
			$("#orderBy").val(order);
			$("#searchForm").submit();
		}
	</script>
