<?xml version="1.0" encoding="GBK" ?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">
<sqlMap namespace="QTH_SALE_PRODUCT">
	<typeAlias alias="SALE_PRODUCT_POJO"
		type="com.xhm.longxin.qth.dal.dataobject.SaleProduct" />
	<typeAlias alias="SALE_PRODUCT_QUERY_VO"
		type="com.xhm.longxin.qth.dal.query.SaleProductQuery" />
	<resultMap id="SALE_PRODUCT_RESULT_MAP" class="SALE_PRODUCT_POJO">
		<result property="id" column="ID" jdbcType="BIGINT" javaType="long" />
		<result property="name" column="name" jdbcType="VARCHAR"
			javaType="String" />
		<result property="unit" column="unit" jdbcType="VARCHAR"
			javaType="String" />
		<result property="categoryId" column="category_id" jdbcType="BIGINT"
			javaType="long" />
		<result property="quantity" column="quantity" jdbcType="BIGINT"
			javaType="long" />
		<result property="price" column="price" jdbcType="DOUBLE"
			javaType="double" />
		<result property="lowestDealSize" column="lowest_deal_size"
			jdbcType="DOUBLE" javaType="double" />
		<result property="status" column="status" jdbcType="VARCHAR"
			javaType="String" />
		<result property="owner" column="owner" jdbcType="VARCHAR"
			javaType="String" />
		<result property="productType" column="product_type" jdbcType="VARCHAR"
			javaType="String" />
		<result property="description" column="description" jdbcType="VARCHAR"
			javaType="String" />
		<result property="imgs" column="id"
			select="QTH_ATTACHMENT.QUERY_SALE_IMG_ATTACHMENT" />
	</resultMap>

	<insert id="INSERT_PRODUCT" parameterClass="SALE_PRODUCT_POJO">
         <![CDATA[
            INSERT INTO qth_product_sale
                (
                 gmt_created,
                 gmt_modified,
                 creator,
                 modifier,
                 is_deleted,
                 name,
                 category_id,
                 quantity,
                 unit,
                 price,
                 lowest_deal_size,
                 status,
                 owner,
                 product_type,
                 description
                 )
               VALUES
               (
				now(),
				now(),
	            'system',
	            'system',
	            'N',
				#name#,
                #categoryId#,
                #quantity#,
                #unit#,
                #price#,
                #lowestDealSize#,
                #status#,
                #owner#,
                #productType#,
                #description#
	        )
        ]]>
		<selectKey resultClass="Long" keyProperty="id">
             <![CDATA[ SELECT LAST_INSERT_ID() AS ID ]]>
		</selectKey>
	</insert>
	<update id="UPDATE_PRODUCT" parameterClass="SALE_PRODUCT_POJO"><![CDATA[
        update
                qth_product_sale
        set
                gmt_modified=now() ]]>
		<isNotNull property="isDeleted" prepend=",">
			is_deleted=#isDeleted#</isNotNull>
		<isNotNull property="modifier" prepend=",">
			modifier=#modifier#
		</isNotNull>
		<isNotNull property="name" prepend=",">
			name=#name#
		</isNotNull>
		<isNotNull property="categoryId" prepend=",">
			category_id=#categoryId#</isNotNull>
		<isNotNull property="unit" prepend=",">
			unit=#unit#
		</isNotNull>
		<isNotNull property="price" prepend=",">
			price=#price#
		</isNotNull>
		<isNotNull property="lowestDealSize" prepend=",">
			lowest_deal_size=#lowestDealSize#
		</isNotNull>
		<isNotNull property="status" prepend=",">
			status=#status#
		</isNotNull>
		<isNotNull property="owner" prepend=",">
			owner=#owner#
		</isNotNull>
		<isNotNull property="productType" prepend=",">
			product_type=#productType#
		</isNotNull>
		<isNotNull property="description" prepend=",">
			description=#description#
		</isNotNull>
		where
		id = #id#
	</update>

	<select id="QUERY_PRODUCT" resultMap="SALE_PRODUCT_RESULT_MAP"
		parameterClass="SALE_PRODUCT_QUERY_VO">
		 <![CDATA[
				select
				id,
				name,
				category_id,
				quantity,
				unit,
				price,
				lowest_deal_size,
				status,
				owner,
				product_type,
				description
				from qth_product_sale where  is_deleted='N']]>
		<isNotNull property="name" prepend="AND">
			name like
			CONCAT('%',#name#, '%')
		</isNotNull>
		<isNotNull property="categoryIds" prepend="AND">
			category_id in
			<iterate property="categoryIds" open="(" close=")"
				conjunction=","> #categoryIds[]#</iterate>
		</isNotNull>
		<isNotNull property="status" prepend="AND">
			status=#status#
		</isNotNull>
		<isNotNull property="productType" prepend="AND">
			product_type=#productType#
		</isNotNull>
		<isNotNull property="id" prepend="AND">
			id=#id#
		</isNotNull>
		<isNotNull property="orderModified" prepend=" ">
			<![CDATA[order by gmt_modified]]>
		</isNotNull>
		<isNotNull property="orderByPrice" prepend=" ">
			<![CDATA[order by price]]>
		</isNotNull>
		<isNotNull property="orderDesc" prepend=" ">
		<![CDATA[	desc]]>
		</isNotNull>
		<include refid="ALICRM_COMMON.ALI_PAGING" />
	</select>

	<select id="QUERY_COUNT" resultClass="int" parameterClass="SALE_PRODUCT_QUERY_VO">
		 <![CDATA[
				select
				count(*)
				from qth_product_sale where  is_deleted='N']]>
		<isNotNull property="name" prepend="AND">
			name like
			CONCAT('%',#name#, '%')
		</isNotNull>
		<isNotNull property="categoryIds" prepend="AND">
			category_id in
			<iterate property="categoryIds" open="(" close=")"
				conjunction=","> #categoryIds[]#</iterate>
		</isNotNull>
		<isNotNull property="status" prepend="AND">
			status=#status#
		</isNotNull>
		<isNotNull property="productType" prepend="AND">
			product_type=#productType#
		</isNotNull>
	</select>
</sqlMap>


